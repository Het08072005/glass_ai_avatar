# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shadehub

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# BEY Avatar Configuration (Optional)
BEY_API_KEY=your_bey_api_key
BEY_AVATAR_ID=your_avatar_id

# CORS Configuration (Important for production!)
FRONTEND_URL=http://localhost:5173
# For production, update to: https://your-frontend-domain.com

# Environment
ENV=development
# For production, set to: production
